<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="AssetManager.Gui.Views.MessageBox"
        Height="200"
        Width="400"
        Title="{Binding Title}">
  <StackPanel>
    <TextBlock Name="Message" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Left" TextWrapping="Wrap" Text="{Binding Message}"></TextBlock>
    <Button Margin="5" Width="100" Name="OkayButton" Command="{Binding $parent[Window].OkayButton_OnClicked}">Ok</Button>
  </StackPanel>
</Window>
