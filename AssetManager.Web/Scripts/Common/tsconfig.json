{
  // Taken from here: https://www.typescriptlang.org/docs/handbook/asp-net-core.html
  // ...and here: https://www.mithunvp.com/typescript-in-asp-net-5-using-visual-studio-2015/
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "outFile": "../../wwwroot/static/compiled_ts/Common.js"
  },
  "include": [
    "*.ts"
  ],
  "compileOnSave": true
}
